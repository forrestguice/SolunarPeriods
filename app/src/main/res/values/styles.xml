<resources>

    <style name="AppTheme" parent="SolunarAppTheme.Dark" />

    <!-- Light theme -->
    <style name="SolunarAppTheme.Light" parent="SuntimesAddonTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="colorAction">@color/colorAction_light</item>
        <item name="colorDisabled">@color/colorDisabled_light</item>

        <item name="icToday">@drawable/ic_today_light</item>
        <item name="icSettings">@drawable/ic_settings_light</item>
        <item name="icHelp">@drawable/ic_help_light</item>
        <item name="icAbout">@drawable/ic_about_light</item>

        <item name="icMoonNoon">@drawable/moonnoon_light</item>
        <item name="icMoonNight">@drawable/moonnight_light</item>

        <item name="cardViewStyle">@style/SolunarCardView.Light</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <item name="colorDate">@color/colorDate_light</item>
        <item name="colorLabel">@color/colorLabel_light</item>
        <item name="colorTime">@color/colorTime_light</item>
        <item name="colorValue">@color/colorValue_light</item>
    </style>

    <!-- Dark theme -->
    <style name="SolunarAppTheme.Dark" parent="SuntimesAddonTheme.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="colorAction">@color/colorAction_dark</item>
        <item name="colorDisabled">@color/colorDisabled_dark</item>

        <item name="icToday">@drawable/ic_today</item>
        <item name="icSettings">@drawable/ic_settings</item>
        <item name="icHelp">@drawable/ic_help</item>
        <item name="icAbout">@drawable/ic_about</item>

        <item name="icMoonNoon">@drawable/moonnoon_dark</item>
        <item name="icMoonNight">@drawable/moonnight_dark</item>

        <item name="cardViewStyle">@style/SolunarCardView.Dark</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="colorDate">@color/colorDate_dark</item>
        <item name="colorLabel">@color/colorLabel_dark</item>
        <item name="colorTime">@color/colorTime_dark</item>
        <item name="colorValue">@color/colorValue_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SolunarCardView" parent="Base.CardView" />
    <style name="SolunarCardView.Dark">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>
    <style name="SolunarCardView.Light">
        <item name="cardBackgroundColor">@color/card_background_light</item>
    </style>

    <style name="dateText">
        <item name="android:textColor">@color/textbutton_date</item>
    </style>


    <style name="periodText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="periodText.Spacer">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_weight">0</item>
    </style>
    <style name="periodText.Start" parent="periodText">
        <item name="android:minWidth">60dp</item>
    </style>
    <style name="periodText.End" parent="periodText">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="periodText.Dash" parent="periodText">
        <item name="android:text">@string/period_separator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="periodText.Label" parent="periodText">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="periodText.Plus" parent="periodText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/label_enhanced_period</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="periodText.Icon" parent="SunIconImageView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/sunIcon_width</item>
        <item name="android:layout_height">@dimen/sunIcon_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/table_row_spacing</item>
        <item name="android:layout_marginBottom">@dimen/table_row_spacing</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="periodText.Icon2" parent="periodText.Icon">
        <item name="android:layout_height">4dp</item>
    </style>
    <style name="periodText.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="SolunarRatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">?attr/colorAction</item>
    </style>

</resources>
