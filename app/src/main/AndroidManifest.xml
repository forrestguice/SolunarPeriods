<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forrestguice.suntimes.solunar">

    <uses-permission android:name="${suntimesPermissionRoot}.permission.READ_CALCULATOR" />  <!-- required to interact w/ Suntimes provider -->

    <application
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="suntimes.action.ADDON_MENUITEM" />
                <category android:name="suntimes.SUNTIMES_ADDON" />
            </intent-filter>
            <!--<meta-data android:name="SuntimesMenuItemTitle" android:value="Hunt and Fish" />-->

            <intent-filter>
                <action android:name="suntimes.action.ADD_CALENDAR" />
                <category android:name="suntimes.SUNTIMES_CALENDAR" />
            </intent-filter>
            <meta-data android:name="SuntimesCalendarReference"
                android:value="content://${solunarPeriodsAuthorityRoot}.provider" />

        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />

        <!-- Content Provider -->
        <provider
            android:name="com.forrestguice.suntimes.solunar.data.SolunarProvider"
            android:authorities="${solunarPeriodsAuthorityRoot}.provider"
            android:permission="${suntimesPermissionRoot}.permission.READ_CALCULATOR"
            android:exported="true"
            android:syncable="false" />

    </application>

    <queries>
        <package android:name="${suntimesApplicationId}" />    <!-- package visibility api 30+ -->
    </queries>

</manifest>